@model IEnumerable<ApplicationCore.Entities.Product>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="customer-container">
    <h2 style="color: cornflowerblue">Hello @ViewData["user"]! Welcome to EShip Website!</h2>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Price</th>
            <th scope="col">Category ID</th>
            <th scope="col">Add to cart</th>
        </tr>
        </thead>
        <tbody>
        @{
            var row = 1;
        }
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@row</th>
                <td>@product.ProductName</td>
                <td>$@product.ProductPrice</td>
                <td>@product.CategoryID</td>
                <td>
                    <button class="btn btn-primary" type="button">+</button>
                </td>
            </tr>
            row++;
        }

        </tbody>
    </table>


    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-controller="Customer" asp-route-page="@(ViewBag.page-1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link"  asp-action="Index" asp-controller="Customer" asp-route-page="1">1</a>
            </li>
            <li class="page-item">
                <a class="page-link"  asp-action="Index" asp-controller="Customer" asp-route-page="2">2</a>
            </li>
            <li class="page-item">
                <a class="page-link"  asp-action="Index" asp-controller="Customer" asp-route-page="3">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" aria-label="Next" asp-action="Index" asp-controller="Customer" asp-route-page="@(ViewBag.page+1)">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>