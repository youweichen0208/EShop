<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Shipping</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Shipping.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="header-title">
                <img src="https://t4.ftcdn.net/jpg/02/28/13/53/360_F_228135369_EWQJsS9TEskImi51e5AxpEsYsonOIBMM.jpg" alt="shipping" style="width: 50px; height:  50px"/>
                <h2>EShip Website</h2>
            </div>
            
            <div class="header-cart">
                <img src="https://cdn-icons-png.flaticon.com/128/3144/3144456.png" alt="cart" style="width: 50px; height:  50px"/>
                <span>cart</span>
            </div>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Login</a>
            <a class="navbar-brand" asp-area="" asp-controller="Signup" asp-action="Index">Signup</a>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Shipping - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>